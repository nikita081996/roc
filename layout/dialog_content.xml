<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/roc20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/dialog_icon"
            android:layout_width="@dimen/roc30dp"
            android:layout_height="@dimen/roc30dp" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/roc14sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/roc15dp"
        android:layout_marginTop="@dimen/roc20dp"
        android:gravity="center"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/roc15sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/roc1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/roc10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/roc5dp"
            android:text="@string/cancel"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/roc15sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/roc1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/retry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/roc5dp"
            android:text="@string/retry"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/roc15sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</LinearLayout>
