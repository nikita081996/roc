<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/forgot_password_activity"
    android:background="@drawable/ic_login_background"
    tools:context=".activities.registration.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/roc10dp"
        android:paddingEnd="@dimen/roc15dp"
        android:paddingStart="@dimen/roc20dp"
        android:paddingTop="@dimen/roc10dp">

        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/roc5dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white" />

        <TextView
            android:layout_width="@dimen/roc0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/roc5dp"
            android:layout_weight="1"
            android:text="@string/reset_password"
            android:textColor="@android:color/white"
            android:textSize="@dimen/roc18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/roc40dp"
        android:layout_marginStart="@dimen/roc40dp"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/roc1dp"
            android:src="@drawable/ic_roc_logo" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/roc5dp"
            android:layout_marginTop="@dimen/roc10dp"
            android:gravity="center"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/email_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:hint="@string/enter_email"
                android:inputType="textEmailAddress"
                android:padding="@dimen/roc10dp"
                android:textSize="@dimen/roc16sp" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/password_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/roc10dp"
            android:background="@color/light_blue"
            android:gravity="center"
            android:paddingBottom="@dimen/roc10dp"
            android:paddingTop="@dimen/roc10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset_password"
                android:textColor="@android:color/white"
                android:textSize="@dimen/roc16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>