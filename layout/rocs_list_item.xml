<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/roc100dp"
    android:background="@color/lite_gray_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:id="@+id/roc_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:text="Openings"
            android:textColor="@color/black"
            android:textSize="@dimen/roc12sp" />

        <ImageView
            android:id="@+id/roc_img"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:src="@drawable/ic_prop_red" />

        <TextView
            android:id="@+id/roc_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="5"
            android:gravity="start"
            android:text="13/01/2019"
            android:textColor="@color/black"
            android:textSize="@dimen/roc12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/landlord"
            android:textColor="@color/black"
            android:textSize="@dimen/roc12sp" />

        <TextView
            android:id="@+id/roc_landlord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/landlord"
            android:textColor="@color/blue"
            android:textSize="@dimen/roc12sp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/replacing"
            android:textColor="@color/black"
            android:textSize="@dimen/roc12sp" />

        <TextView
            android:id="@+id/roc_replacing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/landlord"
            android:textColor="@color/blue"
            android:textSize="@dimen/roc12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/distance_small"
            android:textColor="@color/black"
            android:textSize="@dimen/roc12sp" />

        <TextView
            android:id="@+id/roc_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/landlord"
            android:textColor="@color/blue"
            android:textSize="@dimen/roc12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/sqft"
            android:textColor="@color/black"
            android:textSize="@dimen/roc12sp" />

        <TextView
            android:id="@+id/roc_sqft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/landlord"
            android:textColor="@color/blue"
            android:textSize="@dimen/roc12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/address"
            android:textColor="@color/blue"
            android:textSize="@dimen/roc12sp" />

        <TextView
            android:id="@+id/roc_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/roc10dp"
            android:layout_weight="6"
            android:gravity="start"
            android:text="@string/landlord"
            android:textColor="@color/blue"
            android:textSize="@dimen/roc12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />
</LinearLayout>
