<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    android:padding="@dimen/roc20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_2"
        android:gravity="center"
        android:paddingTop="@dimen/roc5dp"
        android:paddingBottom="@dimen/roc5dp"
        android:text="@string/add_property"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/roc10dp"
        android:orientation="vertical"
        tools:ignore="RtlSymmetry">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/property_address"
            android:textColor="@color/blue_2"
            android:textSize="@dimen/roc15sp" />

        <TextView
            android:id="@+id/property_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/roc5dp"
            android:textSize="@dimen/roc13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/roc5dp"
            android:text="@string/property_address"
            android:textColor="@color/blue_2"
            android:textSize="@dimen/roc15sp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/roc5dp"
            app:hintEnabled="false">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_property_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_squre_box"
                android:hint="@string/enter_proprty_name_hint"
                android:padding="@dimen/roc8dp"
                android:textSize="@dimen/roc15sp" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/roc1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/roc10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ok"
            android:layout_width="@dimen/roc0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/roc5dp"
            android:text="@string/apply_2"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/roc15sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>

        <View
            android:id="@+id/divider"
            android:layout_width="@dimen/roc1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/roc0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="@dimen/roc5dp"
            android:text="@string/cancel"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/roc15sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>
</LinearLayout>
