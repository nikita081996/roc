<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/roc5dp"
    android:layout_marginTop="@dimen/roc5dp"
    android:layout_marginEnd="@dimen/roc5dp"
    android:background="@color/white"
    android:elevation="@dimen/roc2dp"
    android:clickable="true"
    android:gravity="center_vertical"
    android:focusable="true">

    <ImageView
        android:id="@+id/delete_btn"
        android:layout_width="@dimen/roc20dp"
        android:layout_height="@dimen/roc20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/roc10dp"
        android:layout_marginEnd="@dimen/roc10dp"
        app:srcCompat="@drawable/ic_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        android:background="?android:attr/selectableItemBackgroundBorderless">

        <View
            android:layout_width="@dimen/roc5dp"
            android:layout_height="match_parent"
            android:background="@color/green" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/roc10dp"
            android:paddingTop="@dimen/roc10dp"
            android:paddingEnd="@dimen/roc10dp"
            android:paddingBottom="@dimen/roc10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property: "
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/roc3dp"
                    android:layout_toRightOf="@id/property"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Action Plaza"
                    android:textColor="@color/blue" />
            </RelativeLayout>

            <TextView
                android:id="@+id/store_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Two"
                android:textStyle="italic" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/city_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="City Name,"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/state_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/roc5dp"
                    android:layout_toRightOf="@id/city_name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="NY"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/store_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/roc5dp"
                    android:layout_toRightOf="@id/state_name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="209723" />

                <TextView
                    android:id="@+id/last_seen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/roc5dp"
                    android:layout_toRightOf="@id/store_id"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxLines="1"
                    android:paddingTop="@dimen/roc5dp"
                    android:singleLine="true"
                    android:text="Added: 26min ago"
                    android:textSize="@dimen/roc10sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
